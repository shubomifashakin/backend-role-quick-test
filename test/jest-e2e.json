{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",

  "transform": {
    "^.+\\.(t|j)s$": "ts-jest",
    "^.+\\.jsx?$": "babel-jest",
    "^.+\\.mjs$": "babel-jest"
  },
  "transformIgnorePatterns": [
    "/node_modules/(?!(@noble|better-auth|jose|uuid)/)"
  ]
}
